# EditorConfig — консистентний стиль коду
# https://editorconfig.org

root = true

# Defaults for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript/JavaScript/TSX/JSX
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 2
quote_type = double

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# HTML
[*.html]
indent_size = 2

# CSS/SCSS
[*.{css,scss}]
indent_size = 2

# Package files
[package.json]
indent_size = 2

# Config files
[*.config.{js,ts,mjs}]
indent_size = 2

# Makefile (must use tabs)
[Makefile]
indent_style = tab

# Batch files (Windows)
[*.bat]
end_of_line = crlf

# Shell scripts (Unix)
[*.sh]
end_of_line = lf

